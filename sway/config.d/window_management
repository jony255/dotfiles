# move focus via vim keybindings
bindsym {
    $mod+$left  focus left
    $mod+$down  focus down
    $mod+$up    focus up
    $mod+$right focus right
}

# move containers via vim keybindings
bindsym {
    $mod+Shift+$left  move left
    $mod+Shift+$down  move down
    $mod+Shift+$up    move up
    $mod+Shift+$right move right
}

# gain access to split{v,h}, stacking, and tabbed layouts
bindsym {
    $mod+t       split toggle
    $mod+s       layout stacking
    $mod+w       layout tabbed
    $mod+f       floating toggle
    $mod+Shift+f focus mode_toggle
}

# kill focused window
bindsym $mod+q kill

# I don't like title bars
default_border pixel 5

# move floating windows with mouse when $mod is pressed
floating_modifier $mod normal

# configure scratchpad bindsyms
bindsym {
    $mod+minus       scratchpad show
    $mod+Shift+minus move scratchpad
}
