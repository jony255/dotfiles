set { 
    # use the super key as mod
    $mod Mod4

    # variables for commonly used programs
    $term termite
    $browser firefox

    $scripts_dir $XDG_CONFIG_HOME/sway/scripts

    $tray_script $scripts_dir/sway_tray.fish

    $volume_delta 2
    $volume_script $scripts_dir/volume_control.fish

    $brightness_delta 5
    $brightness_script $scripts_dir/brightness_control.sh

    $left  h  
    $down  j
    $up    k
    $right l
}
