# move focus via vim keybindings
bindsym {
    $mod+$left  focus left
    $mod+$down  focus down
    $mod+$up    focus up
    $mod+$right focus right
}

# move containers via vim keybindings
bindsym {
    $mod+Shift+$left  move left
    $mod+Shift+$down  move down
    $mod+Shift+$up    move up
    $mod+Shift+$right move right
}

# toggle between splith or splitv
bindsym $mod+t exec swaymsg split toggle

# kill focused window
bindsym $mod+q kill

# I don't like title bars
default_border pixel 5
