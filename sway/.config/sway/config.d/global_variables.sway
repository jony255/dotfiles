set { 
	# use the super key as mod
    $mod Mod4

	# variables for commonly used programs
    $term termite
    $browser firefox

    $scripts_dir $XDG_CONFIG_HOME/fish/scripts

    $tray_script $scripts_dir/sway/sway_tray.fish

    $volume_delta 2
    $volume_script $scripts_dir/sway/volume_control.fish

    $left  h  
    $down  j
    $up    k
    $right l
}
